    <script>
        function addNewAddress() {
            document.querySelectorAll('input[name="address"]').forEach(inp => {
                inp.disabled = true;
            });
            document.getElementById('addresses').classList.add('d-none');
            document.getElementById('addAddress').classList.remove('d-none');
        }
        function cancelAddAddress() {
            document.querySelectorAll('input[name="address"]').forEach(inp => {
                inp.disabled = false;
            });
            document.getElementById('addresses').classList.remove('d-none');
            document.getElementById('addAddress').classList.add('d-none');
        }

        async function submitOrder(event) {
            event.preventDefault();
            const data = new FormData(event.target);

            try {
                const response = await axios.post('/make-order', data, {
                    headers:{
                        'Content-Type': 'application/json'
                    }
                });
                if (response.status === 200) {
                    document.getElementById('delivery-date').textContent = response.data.delivery;
                    document.getElementById('ordered').style.display = "block";
                }
            } catch(err) {
                alert(err.response?.data?.error || err);
            }
        }
    </script>
