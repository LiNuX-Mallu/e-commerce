    <!-- Shopping Cart Section Begin -->
    <section class="checkout-section spad">
        <div class="container">
            <form onsubmit="submitOrder(event)" class="checkout-form">
                <div class="row">
                    <div class="col-lg-6" id="addresses">
                        <div class="d-flex justify-content-between pb-2">
                            <h4 class="">Billing Address</h4>
                            <button type="button" onclick="addNewAddress()" class="border-0 bg-transparent"><i class="fa fa-plus-circle"></i> Add new</button>
                        </div>
                        <div class="border border-bottom-0 p-1">
                            <div class="border-bottom p-3" id="addressAtTop"></div>
                            <% user.address.forEach(address => { %>
                                <% if (address.defaulted === true) { %>
                                    <script>
                                        document.getElementById('addressAtTop').innerHTML =
                                        `
                                        <label>
                                        <strong class="text-capitalize"><%=address.addressType%></strong>
                                        <br>
                                        <%=address.customerName%>,
                                        <%=address.contactNumber%>,
                                        <%=address.street%>,
                                        <%=address.city%>,
                                        <%=address.pincode%>
                                        </label>
                                        <input style="width: 3%;" type="radio" value="<%=address._id%>" name="address" class="form-check" checked>
                                        `
                                    </script>
                                <% } else { %>
                                <div class="border-bottom p-3">
                                    <label>
                                        <strong class="text-capitalize"><%=address.addressType%></strong>
                                        <br>
                                        <%=address.customerName%>,
                                        <%=address.contactNumber%>,
                                        <%=address.street%>,
                                        <%=address.city%>,
                                        <%=address.pincode%>
                                    </label>
                                    <input style="width: 3%;" type="radio" value="<%=address._id%>" name="address" class="form-check">
                                </div>
                                <% } %>
                            <% }); %>
                            </div>
                    </div>
                    <div class="col-lg-6 d-none" id="addAddress">
                        <!-- <div class="checkout-content">
                            <a href="#" class="content-btn">Click Here To Login</a>
                        </div> -->
                        <h4>Biiling Details</h4>
                        <div class="row">
                            <div class="row col-lg-12 mb-2">
                                <div class="col-4">
                                    <label class="form-label">Home</label>
                                    <input class="w-auto" type="radio" name="addressType" value="home" checked>
                                </div>
                                <div class="col-4">
                                    <label class="form-label">Office</label>
                                    <input class="w-auto" type="radio" name="addressType" value="office">
                                </div>
                                <div class="col-4">
                                    <label class="form-label">Other</label>
                                    <input class="w-auto" type="radio" name="addressType" value="other">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label for="name">Name</label>
                                <input type="text" name="customerName" id="name">
                            </div>
                            <div class="col-lg-12">
                                <label for="contact">Contact number</label>
                                <input type="text" name="contactNumber" id="contact">
                            </div>
                            <div class="col-lg-12">
                                <label for="house">Building/House number or Company name</label>
                                <input type="text" name="houseNumber" id="house">
                            </div>
                            
                            <div class="col-lg-12">
                                <label for="street">Street</label>
                                <input type="text" name="street" id="street">
                            </div>
                            <div class="col-lg-4">
                                <label for="town">Town/City</label>
                                <input type="text" name="city" id="town">
                            </div>
                            <div class="col-lg-4">
                                <label for="state">State</label>
                                <input type="text" name="state" id="state">
                            </div>
                            <div class="col-lg-4">
                                <label for="zip">Pincode</label>
                                <input type="text" id="zip" name="pincode">
                            </div>
                            <div class="col-lg-12">
                                <label for="landmark">Landmark <i>(optional)</i> </label>
                                <input type="text" id="landmark" name="landmark">
                            </div>
                            <div class="col-lg-12 d-flex justify-content-center">
                                <button type="button" class="btn-outline-dark border-0 p-2" onclick="cancelAddAddress()">cancel</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="discount-coupon">
                            <h6>Coupon code &nbsp;<span id="couponInfo"></span></h6>
                            <div class="coupon-form">
                                <input style="text-transform: uppercase; color: rgb(58, 58, 58); font-weight: 700;" type="text" id="couponCode" placeholder="Enter your codes" name="couponCode">
                                <button onclick="checkCoupon()" type="button" class="site-btn coupon-btn">Apply</button>
                            </div>
                            
                        </div>
                        <div class="place-order">
                            <h4>Your Order</h4>
                            <div class="order-total">
                                <ul class="order-table">
                                    <% let total = 0; %>
                                    <li>Product <span>Total</span></li>
                                    <% user.cart.forEach(item => { %>
                                        <% total += (item.productId.price - ((item.productId.price * item.productId.category.categoryId.offer) / 100) - ((item.productId.price * item.productId.offer) / 100)) * item.quantity; %>
                                        <li class="fw-normal"><%= item.productId.productName %> &nbsp; <code>X</code> &nbsp;  <%= item.quantity %> <span>₹<%= (item.productId.price - ((item.productId.price * item.productId.category.categoryId.offer) / 100) - ((item.productId.price * item.productId.offer) / 100)) * item.quantity %></span></li>
                                    <% }); %>
                                    <li class="fw-bold">Subtotal <span>₹<%= total %></span></li>
                                    <li class="text-black">Delivery charge<span>₹40</span></li>
                                    <li id="couponLi" class="text-success"></li>
                                    <li class="total-price">Total <span class="text-success"> ₹<span class="text-success" id="totalValue"><%=total + 40%></span></span></li>
                                </ul>
                                <div class="payment-check">
                                    <div class="pc-item">
                                        <label for="pc-wallet">
                                            Wallet
                                            <input value="walletPay" type="radio" id="pc-wallet" name="paymentMethod">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="pc-item">
                                        <label for="pc-paypal">
                                            Razorpay
                                            <input value="razorpay" type="radio" id="pc-paypal" name="paymentMethod">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="pc-item">
                                        <label for="pc-cod">
                                            Cash on delivery
                                            <input type="radio" id="pc-cod" name="paymentMethod" value="cod" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="order-btn">
                                    <button type="submit" class="site-btn place-btn">Place Order</button>
                                </div>
                            </div>
                        </div>
