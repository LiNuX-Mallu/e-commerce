    <script>
        function addNewAddress() {
            document.querySelectorAll('input[name="address"]').forEach(inp => {
                inp.disabled = true;
            });
            document.getElementById('addresses').classList.add('d-none');
            document.getElementById('addAddress').classList.remove('d-none');
        }
        function cancelAddAddress() {
            document.querySelectorAll('input[name="address"]').forEach(inp => {
                inp.disabled = false;
            });
            document.getElementById('addresses').classList.remove('d-none');
            document.getElementById('addAddress').classList.add('d-none');
        }


        async function razorPayment(data) {
            const apiKey = '<%=RazorApiKey%>';
            return new Promise((resolve, reject) => {
                const options = {
                    key: apiKey,
                    amount: data.totalAmount * 100,
                    currency: 'INR',
                    name: 'ZOKSO',
                    description: 'Order payment',
                    order_id: undefined,
                    handler: function (response) {
                        resolve(response);
                    },
                    theme: {
                        color: '#e7ab3c'
                    }
                };
                const rzp = new Razorpay(options);
                rzp.open();
            });
        }

        async function submitOrder(event) {
            event.preventDefault();
            const data = new FormData(event.target);
            try {
                const response = await axios.post('/make-order', data, {
                    headers:{
                        'Content-Type': 'application/json'
                    }
                });
                if (response.status === 200 && data.get('paymentMethod') === "razorpay") {
                    try {
                        const paymentResponse = await razorPayment(response.data.order);
                        const verifyResponse = await axios.post('/order/verify-payment', {paymentResponse, orderId: response.data.order._id}, {
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
                        if (verifyResponse.status === 200) {
                            await Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: 'Order successfull',
                                timer: 1500,
                            });
                            window.location.href = `/view-order/${verifyResponse.data.orderId}`;
                        } else {
                            await Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Payment failed',
                            });
                        }
                    } catch(err) {
                        await Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Payment failed',
                        });
                    }
                } else if (response.status === 200 && data.get('paymentMethod') === "cod") {
                    await Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Order successfull',
                        timer: 1500,
                    });
                    window.location.href = `/view-order/${response.data.order.orderId}`;
                } else if (response.status === 200 && data.get('paymentMethod')  === "walletPay") {
                    const result = await Swal.fire({
                        title: "Confirm payment",
                        text: `RS: ${response.data.order.totalAmount} will be debited from your wallet`,
                        icon: 'info',
                        showCancelButton: true,
                        confirmButtonColor: 'MediumSeaGreen',
                        cancelButtonColor: 'Tomato',
                        confirmButtonText: 'Pay amount'
                    });
                    try {
                        const verifyResponse = await axios.post('/order/verify-wallet', {result: result.isConfirmed, orderId: response.data.order['_id']}, {
                        headers: {
                            'Content-Type': 'application/json'
                        }
                        });
                        if (verifyResponse.status === 200) {
                            await Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: 'Order successfull',
                                timer: 1500,
                            });
                            window.location.href = `/view-order/${verifyResponse.data.orderId}`;
                        }
                    } catch(err) {
                        if (err.response?.status === 400) {
                            await Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Insufficient balance',
                            });
                        } else {
                            await Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Internal server error',
                            });
                        }
                    }
                }
            } catch(err) {
                await Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                });
            }
        }

        const currTotal = document.getElementById('totalValue').textContent;

        async function checkCoupon() {
            document.getElementById('totalValue').textContent = currTotal;
            try {
                const totalAmount = document.getElementById('totalValue').textContent;
                const code = document.getElementById('couponCode').value;
                const response = await axios.post('/check-coupon', {couponCode: code, totalAmount}, {
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                if (response.status === 200) {
                    document.getElementById('couponInfo').innerHTML = `<span class="text-success fw-bold">Coupon accepted</span>`;
                    document.getElementById('couponLi').innerHTML = `Coupon <span>₹${response.data.money}</span>`;
                    document.getElementById('totalValue').textContent = document.getElementById('totalValue').textContent - response.data.money;
                } else {
                    throw new Error();
                }
            } catch(err) {
                document.getElementById('couponInfo').innerHTML = `<span class="text-danger fw-bold">${err.response?.data?.error || 'invalid coupon'}</span>`;
            }
        }
    </script>
