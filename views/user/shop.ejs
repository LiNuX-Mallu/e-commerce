    <script>
        let page = 2;
        let loading = false;
        let noMoreData = '<%=noMoreData%>';
        noMoreData = (noMoreData === "false") ? false : true;

        async function loadProducts() {
            if (!loading && !noMoreData) {
                loading = true;
                const category = '<%=category%>';
                const size = '<%=size%>';
                const priceRange = '<%=priceRange%>';
                const sort = '<%=sort%>'
                const keyword = '<%=keyword%>';
                try {
                    const response = await axios.get(`/shop?page=${page}&category=${category}&size=${size}&priceRange=${priceRange}&sort=${sort}&keyword=${keyword}`);
                    let productlist = document.querySelector('#productList .row');
                    if (response.data.length === 0) {
                        noMoreData = true;
                        productlist.insertAdjacentHTML('afterend', '<h4 class="text-center pt-4 text-black-50 fw-bold">You reached the end <i class="fa fa-sad-tear"></i></h4>');
                    } else {
                        response.data.forEach(product => {
                            let productHTML = `
                            <div class="col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="pi-pic">
                                            <img src="${product.images[1]}" alt="">
                                            <div class="icon">
                                                <i class="icon_heart_alt"></i>
                                            </div>
                                            <ul>
                                                <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                                                <li class="quick-view"><a href="/product/${product._id}">+ Quick View</a></li>
                                                <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="pi-text">
                                            <div class="catagory-name">${product.category.categoryName}</div>
                                            <a href="#">
                                                <h5 class="text-capitalize">${product.productName}</h5>
                                            </a>
                                            <div class="product-price">
                                            ₹${product.price - (product.price * (product.offer / 100)) - (product.price * (product.category.categoryId.offer / 100))}
                                            ${(product.offer || product.category.categoryId.offer) ? '<span>₹'+product.price+'</span>' : ''}
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            `
                            productlist.insertAdjacentHTML('beforeend', productHTML);
                        });
                        page++;
                    }
                    loading = false;
                } catch(err) {
                    loading = false;
                    alert('Internal server error');
                }
            }
            document.getElementById('loading-more').classList.add('d-none');
        }

        '<% if (products.length !== 0) { %>'
        window.addEventListener('scroll', function() {
            if (window.scrollY + window.innerHeight >= document.body.offsetHeight - 300) {
                if (!noMoreData) {
                    document.getElementById('loading-more').classList.remove('d-none');
                    setTimeout(async () => {
                        await loadProducts();
                    }, 1000);
                }
            }
        });
        '<% } %>'

        function priceRange() {
            const min = document.getElementById('minamount').value;
            const max = document.getElementById('maxamount').value;
            window.location.href = `/shop?priceRange=${min}-${max}&category=<%=category%>&size=<%=size%>&sort=<%=sort%>&keyword=<%=keyword%>`;
        }

        function redirecter(url) {
            window.location.href = url;
        }
    </script>
