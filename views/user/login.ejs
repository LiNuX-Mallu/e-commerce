    <!-- Js Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery.zoom.min.js"></script>
    <script src="/js/jquery.dd.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/axios.min.js"></script>

    <script>
        //axios.defaults.headers.common['CSRF-Token'] = '<%# csrfToken %>';
        const form = document.getElementById('login-form');
        form.addEventListener('submit', async (event) => {
            event.preventDefault();
            const formData = new FormData(event.target);
            try {
                const response = await axios.post('/user/login', formData, {
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                if (response.status === 200) {
                    window.location.href = "/";
                }
            } catch(err) {
                if (err.response.status == 400) {
                    document.getElementById('error').textContent = err.response?.data?.error;
                } else {
                    document.getElementById('error').textContent = 'Internal server error';
                }
            }

        });

        const showPass = document.getElementById('show-pass');
        const pass = document.querySelector('input[name="password"]');
        showPass.addEventListener('change', () => {
            if (showPass.checked === true) {
                pass.type = "text";
            } else {
                pass.type = "password";
            }
        });


        const forgotPass = document.getElementById('forgotPass');
        forgotPass.addEventListener('click', async () => {
            document.getElementById('success').textContent = "";
            const user = document.querySelector('input[name="user"]');
            if (user.value === "") {
                user.value = "";
                user.placeholder = "please provide your email or phone number to reset password";
                user.classList.add('red-placeholder');
            } else {
                try {
                    document.getElementById('spinner').classList.remove('visually-hidden');
                    const response = await axios.post('/user/forgot-password', {user: user.value});
                    if (response.status === 200) {
                        document.getElementById('success').textContent = response.data.message;
                    }
                    document.getElementById('spinner').classList.add('visually-hidden');
                } catch (err) {
                    if (err.response.status === 400) {
                        user.value = "";
                        user.placeholder = err.response.data.error;
                        user.classList.add('red-placeholder');
                    }
                    document.getElementById('spinner').classList.add('visually-hidden');
                }
            }
        });
    </script>
</body>

