    <!-- Breadcrumb Form Section Begin -->

    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="login-form">
                        <h2>Login</h2>
                        <p class="text-center text-danger" id="error"></p>
                        <p style="color: green;" class="text-center" id="success"></p>
                        <form id="login-form">
                            <div class="group-input">
                                <label for="username">Phone number or email address</label>
                                <input type="text" name="user" required>
                            </div>
                            <div class="group-input">
                                <label for="password">Password</label>
                                <input type="password" name="password" required>
                            </div>
                            <div class="form-check mb-5 d-flex justify-content-between">
                                <input type="checkbox" class="form-check-input shadow-none rounded-0" id="show-pass">
                                <label class="form-check-label" for="show-pass">show password</label>
                                <button type="button" id="forgotPass" class="nav-link p-0 border-0 bg-transparent" href="/user/forgot-password">Forgot password?</button>
                            </div>  
                            <button type="submit" class="site-btn login-btn">Sign In</button>
                        </form>
                        <div class="switch-login">
                            <a href="/register" class="or-login">Or Create An Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
