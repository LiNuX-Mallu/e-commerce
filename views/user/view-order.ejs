    <section class="shopping-cart spad">
        <div class="container">
            <div class="shadow">
                <% order.orderItems.forEach(item => { %>
                    <div class="row">
                        <div class="col-md-3">
                            <img src="<%=item.productId.images[1]%>" width="100%">
                        </div>
                        <div class="col-md-7 p-4 d-flex gap-2 flex-column border-bottom">
