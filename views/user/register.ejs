    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        <h2>Register</h2>
                        <form id="reg-form">
                            <div class="d-lg-flex justify-content-center gap-1">
                                <div class="group-input w-100">
                                    <label for="firstName">Firstname</label>
                                    <input type="text" name="firstName">
                                    <p id="firstName" class="p-1 text-danger"></p>
                                </div>
                                <div class="group-input w-100">
                                    <label for="lastName">Lastname</label>
                                    <input type="text" name="lastName">
                                    <p id="lastName" class="p-1 text-danger"></p>
                                </div>
                            </div>
                            <div class="group-input">
                                <label for="email">Email address</label>
                                <input type="text" name="email">
                                <p id="email" class="p-1 text-danger"></p>
                            </div>
                            <div class="group-input">
                                <label for="phone">Phone number</label>
                                <input type="text" name="phone">
                                <p id="phone" class="p-1 text-danger"></p>
                            </div>
                            <div class="d-lg-flex justify-content-center gap-1">
                                <div class="group-input w-100">
                                    <label for="gender">Gender</label>
                                    <select name="gender">
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                    <p id="gender" class="p-1 text-danger"></p>
                                </div>
                                <div class="group-input w-100">
                                    <label for="dob">Date of birth</label>
                                    <input type="date" name="dob">
                                    <p id="dob" class="p-1 text-danger"></p>
                                </div>
                            </div>
                            <div class="group-input">
                                <label for="pass">Password</label>
                                <input type="password" name="pass">
                                <p id="pass" class="p-1 text-danger"></p>
                            </div>
                            <div class="group-input">
                                <label for="conpass">Confirm Password</label>
                                <input type="password" name="conpass">
                                <p id="conpass" class="p-1 pb-0 text-danger"></p>
                            </div>
                            <div class="form-check mb-5">
                                <input type="checkbox" class="form-check-input shadow-none rounded-0" id="show-pass">
                                <label class="form-check-label" for="show-pass">show password</label>
                            </div>
                            <button type="submit" class="site-btn register-btn">REGISTER</button>
                        </form>
                        <div class="switch-login">
                            <a href="/login" class="or-login">Or Login</a>
                        </div>
                    </div>
                </div>
