  <script>

    const form = document.getElementById('addProduct');
    form.addEventListener('submit', async (event) => {
        event.preventDefault();

        form.querySelectorAll('p').forEach((ele) => {
          ele.textContent = "";
        })

        const data = new FormData(event.target);
        try {
            document.getElementById('spinner').classList.remove('visually-hidden');
            const response = await axios.post('/admin/add-product', data, {
                headers: {
                    'Content-Type': 'multipart/form-data'
                }
            });
            document.getElementById('spinner').classList.add('visually-hidden');
            if (response.status === 200) {
                alert(response.data.message);
                window.location.href = '/admin/products';
            }
        } catch(err) {
          document.getElementById('spinner').classList.add('visually-hidden');
          if (err.response.status === 400) {
            const errors = err.response.data.errors;
            Object.keys(errors).forEach((key) => {
              document.getElementById(key).textContent = errors[key];
            });
          } else {
              alert(err);
          }
        }
    });

  </script>

