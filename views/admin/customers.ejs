    //block button
    async function blockButton(userId) {
      const statusTag = document.getElementById(`status-${userId}`);
      try {
        const response = await axios.put('/admin/block-customer', {userId});
        if (response.status === 200) {
          if (response.data.blocked === false) {
            statusTag.innerHTML = '<p class="text-success fw-bold"> active </p>';
          } else {
            statusTag.innerHTML = '<p class="text-danger fw-bold"> blocked </p>';
          }
        }
      } catch(err) {
        alert(err.response.data.error);
      }
    } 

  </script>

