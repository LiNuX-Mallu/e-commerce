  <script type="text/javascript">
    $(function () {
      var options = {
        valueNames: [ 'item-name', 'item-location', 'item-ceo' ],
        page: 10,
        pagination: {
          paginationClass: 'nav-pagination'
        }
      };

      var companiesList = new List('companies', options);
    })

    async function cancelOrder(orderId) {
      const conf = window.confirm("Are you sure want to cancel this order?");
      if(!conf) {
        return;
      }
      try {
        const response = await axios.put('/cancel-order', {orderId}, {
          headers: {
            'Content-Type': 'application/json'
          }
        });
        if (response.status === 200) {
          alert(response.data.message);
          window.location.reload();
        }
      } catch(err) {
        alert(err.response?.data?.error || "Internal server error");
      }
    }

    async function deliverOrder(orderId) {
      const conf = window.confirm("Are you sure?");
      if(!conf) {
        return;
      }
      try {
        const response = await axios.put('/admin/deliver-order', {orderId}, {
          headers: {
            'Content-Type': 'application/json'
          }
        });
        if (response.status === 200) {
          alert(response.data.message);
          window.location.reload();
        }
      } catch(err) {
        alert(err.response?.data?.error);
      }
    }
  </script>
