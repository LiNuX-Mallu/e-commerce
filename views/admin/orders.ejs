            <tbody class="list">
              <% orders.forEach((order) => { %>
              <tr class="fw-bold text-center">
                <td class="w-10">
                  <div class="row">
                    <% order.orderItems.forEach(item => { %>
                        <img class="col-6 p-0" width="100%" src="<%=item.productId['images'][1]%>">
                    <% }); %>
                  </div>
                </td>

                <td class="text-danger">
                  <%=order.orderId%>
                </td>

                <% if (order.orderStatus === "confirmed" || order.orderStatus === "delivered") { %>
                  <td class="text-success">
                    <%= order.orderStatus %>
                  </td>
                
                <% } else { %>
                  <td class="text-danger">
                    <%= order.orderStatus %>
                  </td>
                <% } %>

                <td>
                  <%= order.paymentStatus %>
                </td>

                <% const orderedAt = order.orderDate %>
                <% const dayIndex = orderedAt.getDay(); %>
                <% const daysOfWeek = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']; %>
                <% const day = daysOfWeek[dayIndex]; %>

                <% const monthIndex = orderedAt.getMonth(); %>
                <% const monthsOfYear = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']; %>
                <% const month = monthsOfYear[monthIndex]; %>

                <% const date = orderedAt.getDate(); %>
                <% const year = orderedAt.getFullYear() %>

                <% const orderDate = `${day} ${date} ${month} ${year}`; %>
                <td class="fs-sm text-muted">
                  <%=orderDate%>
                </td>

                <% if (order.orderStatus === "confirmed") { %>
                  <td class="d-flex flex-column">
                    <button onclick="cancelOrder('<%=order._id%>')" class="btn-danger btn-sm btn w-100">Cancel order</button>
                    <button onclick="deliverOrder('<%=order._id%>')" class="btn-success btn-sm btn w-100">Deliver order</button>
                  </td>
                <% } %>
              </tr>
              <% }); %>
            </tbody>
